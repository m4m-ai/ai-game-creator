{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "module": "system",
    "outFile": "../../lib/node_modules/@types/gameMain.js",
    "allowJs": false,
    "checkJs": false,
    "removeComments": false,
    "noEmit": false,
    "noEmitOnError": false,
    "strict": true,
    "alwaysStrict": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2015.promise",
      "es2015"
    ],
    //如果需要断点调试ts, 则不能配置 baseUrl 和 sourceRoot
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "types": [
      "../../lib/m4m",
      "../../lib/dat.gui",
      "../../lib/m4m_editor/index",
      "../../lib/node_modules/@types/ExcelData",
      "../../lib/node_modules/@types/gameUtil",
      //"../../lib/node_modules/@types/Bottomslab",
    ],
    "paths": {
      "m4m_editor/*": ["../../lib/m4m_editor/*"]
    },
    "composite": false
  }
}